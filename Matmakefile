
# using matmake2: https://github.com/laserskold/matmake2

libmsk_parser
  src = src/parser/*.cpp
  command = [static]
  out = libmsk_parser

libmsk_backend
  src = src/backend/*.cpp
  command = [static]
  out = libmsk_backend

msk
  out = msk
  in = @libmsk_parser
  src =
    src/main/*.cpp
  command = [exe]

# ====== Parser tests ===========================

line_reader_test
  out = line_reader_test
  in = @libmsk_parser
  src = test/line_reader_test.cpp
  command = [test]

tokenizer_test
  out = tokenizer_test
  in = @libmsk_parser
  src = test/tokenizer_test.cpp
  command = [test]

grouper_test
  out = grouper_test
  in = @libmsk_parser
  src = test/grouper_test.cpp
  command = [test]

parser_test
  out = parser_test
  in = @libmsk_parser
  src = test/parser_test.cpp
  command = [test]

# ============ Backend tests =====================

basic_codegen_test
  out = basic_codegen_test
  in = @libmsk_backend
  src = test/basic_codegen_test.cpp
  command = [test]

all
  in =
    @msk
    @line_reader_test
    @tokenizer_test
    @grouper_test
    @parser_test
    @basic_codegen_test
  includes =
    include
    src
    lib/
  copy =
    demos
  config =
    c++17
    Wall

